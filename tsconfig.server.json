{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": ".next",
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["server.ts", "src/lib/**/*.ts", "src/lib/**/*.js"],
  "exclude": ["node_modules", "src/app", "src/components"]
}
